<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align:center">Add a new comment to <%= shop.name %></h1>
		<div style="width:30%; margin:20px auto;">
			<form action="/shops/<%= shop.id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="text">
				</div>
				<!-- <div class="form-group">
					<input class="form-control" type="text" name="comment[author]" placeholder="author">
				</div> -->
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
				</div>
			</form>
			<a href="/shops">Go Back</a>	
		</div>
	</div>
</div>

<%- include("../partials/footer") %>