<%- include("../partials/header") %>

<div class="container">
	<legend>
		<h1>Edit <%= shop.name %></h1>
	</legend>
	<hr>
	<div class="row">
		<div class="col-md-12">
			<form action="/shops/<%= shop._id %>/?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<label for="shop[name]">Shop's Name</label>
					<input class="form-control" type="text" name="shop[name]" value="<%= shop.name %>" autofocus>
				</div>
				<div class="form-group">
					<label for="shop[image]">Shop's Image</label>
					<input class="form-control" type="file" name="shop[image]" accept="image/*" autofocus>
				</div>
				<div class="form-group">
					<label for="shop[image]">Shop's City</label>
					<input class="form-control" type="text" name="shop[city]" value="<%= shop.city %>" autofocus>
				</div>
				<div class="form-group">
					<label for="shop[contact]">Shop's Contact No.</label>
					<input class="form-control" type="tel" name="shop[contact]" value="<%= shop.contact %>" autofocus>
				</div>
				<div class="form-group">
					<label for="shop[address]">Shop's Complete Address</label>
					<input class="form-control" type="text" name="shop[address]" value="<%= shop.address %>" autofocus>
				</div>
				<div class="form-group">
					<label for="opensAt">Shop's Opening Time</label>
					<input class="form-control" type="time" name="shop[opensAt]" value="<%= shop.opensAt %>" autofocus>
				</div>
				<div class="form-group">
					<label for="closesAt">Shop's Closing Time</label>
					<input class="form-control" type="time" name="shop[closesAt]" value="<%= shop.closesAt %>" autofocus>
				</div>
				<div class="form-group">
					<label for="workingDays">Shop's Working Days</label>
					<div name="workingDays">
						<input  type="radio" name="shop[days]" value="Everyday">
						<label  for="Everyday">Everyday</label><br>
						<input  type="radio" name="shop[days]" value="Weekdays">
						<label  for="Weekdays">Weekdays</label><br>
						<input  type="radio" name="shop[days]" value="Monday Closed">
						<label  for="Monday Closed">Monday Closed</label><br>
						<input  type="radio" name="shop[days]" value="Tuesday Closed">
						<label  for="Tuesday Closed">Tuesday Closed</label><br>
						<input  type="radio" name="shop[days]" value="Wednesday Closed">
						<label  for="Wednesday Closed">Wednesday Closed</label><br>
						<input  type="radio" name="shop[days]" value="Thursday Closed">
						<label  for="Thursday Closed">Thursday Closed</label><br>
						<input  type="radio" name="shop[days]" value="Friday Closed">
						<label  for="Friday Closed">Friday Closed</label><br>
						<input  type="radio" name="shop[days]" value="Saturday Closed">
						<label  for="Saturday Closed">Saturday Closed</label><br>
						<input  type="radio" name="shop[days]" value="Sunday Closed">
						<label  for="Sunday Closed">Sunday Closed</label><br>
					</div>
				</div>
				<div class="form-group" style="width:20%; margin:20px auto;">
					<button class="btn btn-primary">Submit</button>
				</div>
			</form>	
		</div>
	</div>
</div>

<%- include("../partials/footer") %>