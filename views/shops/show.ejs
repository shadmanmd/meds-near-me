<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">
				<strong><%= shop.name %></strong>
			</p>
			<div class="list-group">
				<li class="list-group-item active">Information</li>
				<li class="list-group-item"><a href="/">Go Back</a></li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= shop.image %>">
				<div class="caption">
					<h4 class="pull-right">
						Call: <%= shop.contact %>
					</h4>
					<h4><a>
						<%= shop.name %>
					</a></h4>
					<p>
						<%= shop.address %>
					</p>
					<p>
						<em>Submitted by: <a href="/profile/<%= shop.author.id %>"><%= shop.author.username %></a>, <%= moment(shop.createdAt).fromNow() %></em>
					</p>
					<% if(currentUser && shop.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
						<a class="btn btn-xs btn-warning" href="/shops/<%= shop._id %>/edit">Edit</a>
						<form class="delete-form" action="/shops/<%= shop._id %>?_method=DELETE" method="POST">
							<button class="btn btn-xs btn-danger">
								Delete
							</button>
						</form>
					<% } %>
				</div>
			</div>
			<!-- OLD -->
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/shops/<%= shop._id %>/comments/new">Add New Comment</a>
				</div>
				<hr>
				<% shop.comments.forEach(function(comment){ %>
					<div class="row">
						<div class="col-md-12">
							<strong><%= comment.author.username %></strong>
							<span class="pull-right"><em><%= moment(comment.createdAt).fromNow() %></em></span>
							<p>
								<%= comment.text %>
							</p>
							<% if(currentUser && comment.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
								<a class="btn btn-xs btn-warning" 
								   href="/shops/<%= shop._id %>/comments/<%= comment._id%>/edit">
									Edit
								</a>
								<form class="delete-form" 
									  action="/shops/<%= shop._id %>/comments/<%= comment._id%>?_method=DELETE" method="POST">
									<input type="submit" class="btn btn-xs btn-danger" value="Delete">
								</form>
							<% } %>
						</div>
					</div>
				<% }) %>
			</div>
		</div>
	</div>
</div>

<p>
</p>

<%- include("../partials/footer") %>