<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to MedsNearMe</h1>
			<p>One stop destination to find a medical shop near you!</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/shops/new">Add a New Shop</a>
			</p>
		</div>
	</header>

	<div class="row text-center" style="display:flex; flex-wrap:wrap">
		<% shops.forEach(function(shop){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src=<%= shop.image %>>
					<div class="caption">
						<h4><%= shop.name %></h4>
					</div>
					<p>
						<a href="/shops/<%= shop._id %>" class="btn btn-primary">More Info</a>
					</p>
				</div>
				
			</div>
		<% }); %>
	</div>
</div>

<%- include("../partials/footer") %>