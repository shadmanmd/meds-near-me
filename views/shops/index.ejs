<%- include("../partials/header") %>

<div class="container">
	<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
	  <ol class="carousel-indicators">
		<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
		<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
		<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
		<li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
		<li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
		<li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
	  </ol>
	  <div class="carousel-inner">
		<div class="carousel-item active">
		  <img src="https://res.cloudinary.com/shadmanmd/image/upload/v1592058683/1_donoch.jpg" class="w-100" alt="...">
		</div>
		<div class="carousel-item">
		  <img src="https://res.cloudinary.com/shadmanmd/image/upload/v1592058750/2_kpa9tu.jpg" class="w-100" alt="...">
		</div>
		<div class="carousel-item">
		  <img src="https://res.cloudinary.com/shadmanmd/image/upload/v1592058899/3_rdqpay.jpg" class="w-100" alt="...">
		</div>
		<div class="carousel-item">
		  <img src="https://res.cloudinary.com/shadmanmd/image/upload/v1592059074/4_vadkiv.jpg" class="w-100" alt="...">
		</div>
		<div class="carousel-item">
		  <img src="https://res.cloudinary.com/shadmanmd/image/upload/v1592059127/5_ljstf8.jpg" class="w-100" alt="...">
		</div>
		<div class="carousel-item">
		  <img src="https://res.cloudinary.com/shadmanmd/image/upload/v1592059164/6_znrdoc.jpg" class="w-100" alt="...">
		</div>
	  </div>
	  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	  </a>
	  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	  </a>
	</div>

	<div class="gap"></div>
	<hr>
	<div class="gap"></div>
	
	<form action="/shops" method="GET">
		<div class="form-group">
			<input class="form-control" type="text" placeholder="Search for your city ..." name="search" autofocus>
		</div>
		<div class="form-group">
			<input class="mycentre btn btn-primary btn-sm" type="submit" value="Search">
		</div>
	</form>
	
	<hr>
	<div class="gap"></div>
	
	<div class="row">
		<a class="mycentre btn btn-lg btn-primary float-centre" href="/shops/new"><i class="fas fa-plus"></i> <strong>Add a Store</strong></a>
	</div>
	
	<div class="gap"></div>
	<hr>
	<div class="gap"></div>
	
	<h1 class="display-3">
		Available Stores <span class="text-muted">: <em><%= shops.length %></em></span>
	</h1>
	<hr>
	<div class="row text-center" style="display:flex; flex-wrap:wrap">
		<% shops.forEach(function(shop){ %>
			<div class="col-md-3 col-sm-6">
				<div class="card shadow-lg">
					<img class="img-thumbnail" src=<%= shop.image %>>
					<div class="card-body">
						<h4 class="card-title"><%= shop.name %></h4>
						<p class="card-subtitle text-muted"><%= shop.city %></p>
						<p class="card-text"><%= shop.opensAt %> - <%= shop.closesAt %>, <%= shop.days %></p>
						<a href="/shops/<%= shop._id %>" class="btn btn-primary">More Info</a>
					</div>
				</div>
				<hr>
			</div>
		<% }); %>
	</div>
</div>
<div class="gap"></div>
<div class="myfooter">
	<marquee>Please add valid data only, else your added shop will be deleted by the admin.</marquee>
</div>
<%- include("../partials/footer") %>