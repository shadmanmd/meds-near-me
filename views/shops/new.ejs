<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<legend>
			<h1>Add a new Medical Shop</h1>
		</legend>
		<div class="col-md-12">
			<form action="/shops" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<label for="name">Shop's Name</label>
					<input class="form-control" type="text" name="shop[name]" placeholder="Enter the name" required>
				</div>
				<div class="form-group">
					<label for="image">Shop's Image</label>
					<input class="form-control" type="file" name="shop[image]" accept="image/*" required>
				</div>
				<div class="form-group">
					<label for="contact">Shop's Contact No.</label>
					<input class="form-control" type="number" name="shop[contact]" placeholder="contact no." required>
				</div>
				<div class="form-group">
					<label for="address">Shop's Address</label>
					<input class="form-control" type="text" name="shop[address]" placeholder="address" required>
				</div>
				<div class="form-group" style="width:20%; margin:20px auto;">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
				</div>
			</form>
			<a href="/shops">Go Back</a>	
		</div>
	</div>
</div>

<%- include("../partials/footer") %>