<%- include("partials/header") %>

<div class="container">
	<legend>
		<h1>
			<%= user.username %>'s Profile
		</h1>	
	</legend>
	<div class="row align-items-center">
		<div class="col-sm-2 text-center">
			<!-- Image -->
			<img class="rounded-pill img-thumbnail" src="<%= user.dp %>" height="160px" width="190px">
		</div>
		<div class="col-sm-10">
			<h1 class="display-4 text-center"><strong><%= user.username %></strong></h1>
			<% if (user.isAdmin) { %>
				<h5 class="text-center">-- Admin --</h5>
			<% } else { %>
				<h5 class="text-center">----</h5>
			<% } %>
			<h5 class="text-center"><%= user.email %></h5>
		</div>
	</div>
	<br>
	<legend>
		Medical Shops added by <%= user.username %>
	</legend>
	
	<div class="row text-center" style="display:flex; flex-wrap:wrap">
		<% shops.forEach(function(shop){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src=<%= shop.image %>>
					<div class="caption">
						<h4><%= shop.name %></h4>
					</div>
					<p>
						<a href="/shops/<%= shop._id %>" class="btn btn-primary">More Info</a>
					</p>
				</div>
				
			</div>
		<% }); %>
	</div>
	
</div>

<%- include("partials/footer") %>