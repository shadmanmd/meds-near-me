<%- include("partials/header") %>

<div class="container">
	<legend>
		<h1 class="display-4">
			<%= user.username %>'s Profile
		</h1>	
	</legend>
	<hr>
	<div class="row align-items-center">
		<div class="col-sm-2 text-center">
			<!-- Image -->
			<img class="rounded img-thumbnail" src="<%= user.dp %>" height="190px" width="190px">
		</div>
		<div class="col-sm-10">
			<div class="gap">
				
			</div>
			<h1 class="text-center"><strong><%= user.username %></strong>
			<% if (user.isAdmin) { %>
				<span class="blue"><i class="fas fa-check-circle"></i></span></h1>
			<% } else { %>
			</h1>
			<% } %>
			<h5 class="text-center"><em><%= user.email %></em></h5>
		</div>
	</div>
	<hr>
	<legend>
		Medical Stores added by <%= user.username %> <span class="text-muted">: <em><%= shops.length%></em></span>
	</legend>
	<hr>
	<div class="row text-center" style="display:flex; flex-wrap:wrap">
		<% shops.forEach(function(shop){ %>
			<div class="col-md-3 col-sm-6">
				<div class="card shadow-lg">
					<img class="img-thumbnail" src=<%= shop.image %>>
					<div class="card-body">
						<h4 class="card-title"><%= shop.name %></h4>
						<p class="card-subtitle text-muted"><%= shop.city %></p>
						<p class="card-text"><%= shop.opensAt %> - <%= shop.closesAt %>, <%= shop.days %></p>
						<a href="/shops/<%= shop._id %>" class="btn btn-primary">More Info</a>
					</div>
				</div>
				<hr>
			</div>
		<% }); %>
	</div>
	<hr>
</div>

<%- include("partials/footer") %>