	<!-- FontAwesome CDN -->
	<script src="https://kit.fontawesome.com/d3ba8b71b7.js" crossorigin="anonymous"></script> 
	<body>
	
		<nav class="navbar navbar-dark mynav sticky-top navbar-expand-lg">
			<div class="container-fluid">
				<div class="navbar-header">
					<a class="navbar-brand" href="/"><i class="fas fa-pills"></i> MedsNearMe</a>
				</div>
				<a href="/about" class="ml-auto mr-1"><i class="fas fa-info-circle"></i></a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
					<span class="navbar-toggler-icon"></span>
				</button>
				 <div class="collapse navbar-collapse flex-grow-0" id="navbarSupportedContent">
        			<ul class="navbar-nav nav text-right">
						<% if(!currentUser){ %>
						<li class="nav-item"><a class="nav-link ml-auto mr-1" href="/login">Login</a></li>
						<li class="nav-item"><a class="nav-link ml-auto mr-1" href="/register">Sign Up</a></li>
						<% } else { %>
						<li class="nav-item"><a class="nav-link active ml-auto mr-1" href="/profile/<%= currentUser._id %>">Welcome <%= currentUser.username %>!</a></li>
						<li class="nav-item"><a class="nav-link ml-auto mr-1" href="/logout">Logout</a></li>
						<% } %>
					 </ul>
				</div>
			</div>
		</nav>
		<div class="gap"></div>
		<div class="container">
			<% if(error && error.length>0){ %>
				<div class="alert alert-danger" role="alert">
					<%= error %>
				</div>
			<% } %>
			<% if(success && success.length>0){ %>
				<div class="alert alert-success" role="alert">
					<%= success %>
				</div>
			<% } %>
		</div>