<%- include("partials/header") %>

<div class="container">
	<legend>
		<h1>
			Register Yourself
		</h1>
	</legend>
	<hr>
	<div class="row">
		<div class="col-md-12">
			<form action="/register" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<label for="email">Your Email ID<span class="red"> *</span></label>
					<input class="form-control" type="email" name="email" placeholder="name@example.com" required autofocus>
				</div>
				<div class="form-group">
					<label for="email">Your Username<span class="red"> *</span></label>
					<input class="form-control" type="text" name="username" placeholder="Username" required autofocus>
				</div>
				<div class="form-group">
					<label for="dp">Your Display Picture</label>
					<!-- <input class="form-control" type="text" name="dp" placeholder="Image URL" autofocus> -->
					<input class="form-control" type="file" name="dp" accept="image/*">
				</div>
				<div class="form-group">
					<label for="email">Set a Password<span class="red"> *</span></label>
					<input class="form-control" type="password" name="password" placeholder="Password" required autofocus>
				</div>
				<div class="form-group">
					<label for="email">Want to become an admin?</label>
					<input class="form-control" type="text" name="adminCode" placeholder="Enter Admin Code" autofocus autocomplete="off">
				</div>
				<div class="form-group">
					<span><a href="#" onclick="secret()"><em>What's the Admin Code?</em></a></span>
					<p class="float-right text-right"><span class="red">* Required</span></p>
				</div>
				<div class="form-group">
					<button class="mycentre btn btn-primary">Sign Up</button>
				</div>
			</form>
		</div>
	</div>
</div>

